            $("#nmProfessor").text($('#txtNomeProfessor').val());
            $('#divBotoesEditarMobile').css('display', 'none');
            $('#divDesabilitarProfessorMobile').css('display', 'flex');
        } else {
            $('#divBotoesEditar').css('display', 'none');
            $('#divDesabilitarProfessor').css('display', 'flex');
