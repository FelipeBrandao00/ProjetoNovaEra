@model Application.Responses.ResponseModelUsuario

@{
    bool icAdicionar = Model is null;

    Layout = null;
    var NmCurso = String.Empty;
    var NmTurma = String.Empty;
    var imgSrc = String.Empty;
    var NmUsuario = String.Empty;

    if (!icAdicionar) {
        NmCurso = ViewBag.NmCurso ?? String.Empty;
        NmTurma = ViewBag.NmTurma ?? String.Empty;
        imgSrc = Model?.DsFoto != null ? $"data:image/jpeg;base64,{Convert.ToBase64String(Model.DsFoto)}" : String.Empty;
        NmUsuario = Model?.NmUsuario;
    }
}

<link rel="stylesheet" href="~/css/Curso/InfoCurso.css">

@Html.HiddenFor(model => model.CdUsuario)
@Html.HiddenFor(model => model.DsCpf)

<div id="divImgCurso">

    @if (!String.IsNullOrEmpty(imgSrc)) {
        <img height="122" width="122" src="@imgSrc" alt="Foto do Curso" />
    } else {
        <img height="122" width="122" />
    }

    <div>
        <button id="btnTrocarFoto"><b class="linear1">Trocar foto</b></button>
        <button id="btnExcluirFoto"><b>Excluir foto</b></button>
    </div>
</div>

<div id="divNomeCurso">
    <label for="divNomeCurso" class="linear1">Nome:</label><br />
    <input id="txtNomeCurso" class="txtInfoCurso" asp-for="NmUsuario" type="text" placeholder="" disabled />
</div>

<div id="divEmailCurso">
    <label for="divEmailCurso" class="linear1">Email:</label><br />
    <input id="txtEmailCurso" class="txtInfoCurso" asp-for="DsEmail" type="text" placeholder="" disabled />
</div>

<div id="divCFCurso">
    <label for="divCFCurso" class="linear1">CPF:</label><br />
    <input id="txtCFCurso" class="txtInfoCurso" asp-for="DsCpf" type="text" placeholder="" disabled />
</div>

<div id="divGrupoPC1">
    <div id="divGeneroCurso">
        <label for="divGeneroCurso" class="linear1">Gênero:</label><br />
        <select id="txtGeneroCurso" class="txtInfoCurso" asp-for="DsGenero" disabled>
            <option value="0">Selecione</option>
            <option value="1">Feminino</option>
            <option value="2">Masculino</option>
        </select>
    </div>

    <div id="divNascimentoCurso">
        <label for="divNascimentoCurso" class="linear1">Nascimento:</label><br />
        <input id="txtNascimentoCurso" class="txtInfoCurso" asp-for="DtNascimento" type="date" placeholder="" disabled />
    </div>

    <div id="divTelefoneCurso">
        <label for="divTelefoneCurso" class="linear1">Telefone:</label><br />
        <input id="txtTelefoneCurso" class="txtInfoCurso" asp-for="DsTelefone" type="text" placeholder="" disabled />
    </div>
</div>

<div id="divSituacaoCurso">
    <label for="txtSituacaoCurso" class="linear1">Situação:</label><br />
    <input id="txtSituacaoCurso" class="txtInfoCurso" asp-for="IcHabilitadoTurma" type="text" placeholder="" disabled />
</div>

<div id="divBotaoAdicionar">
    <button id="btnConfirmarAdicionar" onclick="adicionarCurso()"><b style="color: white;">Adicionar curso</b></button>
</div>

<div id="divBotoesEditar">
    <button id="btnDesativar" onclick="carregarDesabilitarCurso()"><b style="color: white;">Desabilitar curso</b></button>
    <button id="btnEditar" onclick="carregarEdicaoCurso()"><b class="linear1">Editar curso</b></button>
</div>

<div id="divBotoesEdicao">
    <button id="btnCancelar" onclick="cancelarEdicaoCurso()"><b class="linear1">Cancelar edição</b></button>
    <button id="btnSalvar" onclick="salvarInfoCurso()"><b>Salvar</b></button>
</div>

<div id="divDesabilitarCurso">
    <b class="linear1">Tem certeza que deseja desabilitar o curso:</b>
    <b class="linear1">@NmUsuario</b>
    <b class="linear1">Não será possível vinculá-lo à nenhuma turma.</b>
    <div id="divBotoesDesabilitarCurso">
        <button id="btnIgnorarDesabilitarCurso" onclick="cancelarDesabilitarCurso()"><b class="linear1">Não</b></button>
        <button id="btnDesabilitarCurso" onclick="desabilitarCurso()"><b style="color: white;">Desabilitar</b></button>
    </div>
</div>

<div id="divBotaoHabilitarCurso">
    <button id="btnHabilitarCurso" onclick="carregarHabilitarCurso()"><b class="linear1">Habilitar curso</b></button>
</div>

<div id="divHabilitarCurso">
    <b class="linear1">Tem certeza que deseja habilitar o curso:</b>
    <b class="linear1">@NmUsuario</b>
    <b class="linear1">O curso poderá ser vinculado em turmas novamente.</b>
    <div id="divBotoesHabilitarCurso">
        <button id="btnIgnorarHabilitarCurso" onclick="cancelarHabilitarCurso()"><b class="linear1">Não</b></button>
        <button id="btnConfirmarHabilitarCurso" onclick="habilitarCurso()"><b style="color: white;">Habilitar</b></button>
    </div>
</div>

<script type="text/javascript">
    atualizarBotoes();
    atualizarSituacao();

    function atualizarBotoes() {
        if ('@Model?.IcHabilitadoTurma' == 'False') {
            if (window.matchMedia("(max-width: 1200px)").matches) {
                $('#divBotoesEditarMobile').hide();
                $('#divBotaoHabilitarCursoMobile').show();
            } else {
                $('#divBotoesEditar').hide();
                $('#divBotaoHabilitarCurso').show();
            }
        }
    }

    function atualizarSituacao() {
        if ('@Model?.IcHabilitadoTurma' != 'Null') {
            let txt = ('@Model?.IcHabilitadoTurma' == 'True') ? 'Habilitado' : 'Desabilitado';
            $("#txtSituacaoCurso").val(txt);
        }
    }
</script>
